<h2>Edit Celebrity : {{celebrity.name}}</h2>

<form action="/celebrities/{{celebrity.id}}" method="POST">
  <label>
    Name:
    <input type="text" value="{{celebrity.name}}" name="name" />
  </label>
  
 
  <label>
    Occupation:
    <input type="text" value="{{celebrity.occupation}}" name="occupation" />
  </label>
  
 
  <label>
    Catch Phrase:
    <textarea name="catchPhrase" cols="30" rows="4">{{celebrity.catchPhrase}}</textarea>
  </label>
  
 
  <button>Edit</button>
</form>